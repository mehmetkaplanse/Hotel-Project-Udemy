@model List<ResultRoomDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<h1 class="mb-4">Odalar</h1>

 <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Oda Numarası</th>
                <th>Fiyat</th>
                <th>Başlık</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoomID</td>
                    <td>@item.RoomNumber</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Title</td>
                    <td>
                        <a href="/AdminRoom/DeleteRoom/@item.RoomID"
                           class="btn btn-sm btn-danger d-flex justify-content-center">
                            Sil
                        </a>
                    </td>
                    <td>
                        <a href="/AdminRoom/UpdateRoom/@item.RoomID"
                           class="btn btn-sm btn-primary d-flex justify-content-center">
                            Güncelle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-outline-info">Yeni Oda Girişi</a>
                     